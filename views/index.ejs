<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Tarjetas</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Tarjetas</h1>
    <form action="/create" method="POST">
        <input type="text" name="content" placeholder="Escribe tu tarjeta" required>
        <button type="submit">Crear Tarjeta</button>
    </form>
    <div id="cards">
        <% cards.forEach(card => { %>
            <div class="card">
                <p><%= card.content %></p>
                <p>Likes: <%= card.likes %></p>
                <form action="/like" method="POST">
                    <input type="hidden" name="id" value="<%= card.id %>">
                    <button type="submit">Me gusta</button>
                </form>
                <form action="/update" method="POST">
                    <input type="hidden" name="id" value="<%= card.id %>">
                    <input type="text" name="content" placeholder="Actualizar tarjeta" required>
                    <button type="submit">Actualizar</button>
                </form>
                <form action="/delete" method="POST">
                    <input type="hidden" name="id" value="<%= card.id %>">
                    <button type="submit">Eliminar</button>
                </form>
            </div>
        <% }) %>
    </div>
    
    <div class="cards-container">
        <% if (cards && cards.length > 0) { %>
            <% cards.forEach(card => { %>
                <div class="card" id="card-<%= card.id %>">
                    <p><%= card.content %></p>
                    <p class="likes-count">Likes: <%= card.likes %></p>
                    <form class="like-form" data-card-id="<%= card.id %>">
                        <button type="submit">Me gusta</button>
                    </form>
                </div>
            <% }) %>
        <% } else { %>
            <p>No hay cards disponibles.</p>
        <% } %>
    </div>

    <script src="/public/script.js"></script>
</body>
</html>